                <% items.forEach((item)=>{ %> 
                    
                    <div class="item match-<%= i %> ">

                        <div class="background">
                            <img src="<%= item.src %> " alt="">
                        </div>
                        
                        <div class="details">
                            <div class="teams">
                                <h1 style="margin-bottom: -1.8vw;"><%= item.home %></h1>

                                <h1 style="margin-bottom: -1.8vw;">vs</h1>

                                <h1><%= item.away %> </h1>
                            </div>
                            
                            <div class="competetion">
                                <h3><%= item.comp %> </h3>
                            </div>

                            <div class="other-details">
                                <div class="type">
                                    <% if(item.type.toLowerCase() == 'live'){ %>
                                        <p style="color: #DB0007; border: 1px solid #DB0007;">L</p>
                                    <% }else if(item.type.toLowerCase() == 'replay'){ %> 
                                        <p style="color: #50ff11; border: 1px solid #50ff11;">R</p>
                                    <% }else{ %>
                                        <p style="color: #00F0FF; border: 1px solid #00F0FF;">S</p>
                                    <% } %>  
                                </div>

                                <i class="fa-solid fa-circle"></i>

                                <div class="date">
                                    <span><%= item.date %></span> 
                                </div>

                                <i class="fa-solid fa-circle"></i>

                                <div class="time">
                                    <span><%= item.time %></span> 
                                </div>


                            </div>

                            <div class="controls">
                                <button class="watch-now"><i class="fa-solid fa-circle-play"></i> <span> Watch Now</span></button>

                                <button class="reminder"><i class="fa-regular fa-bell" id="reminder"></i></button>

                                <button class="share"><i class="fa-solid fa-share-nodes"></i></button>
                            </div>


                        </div>

                        
                    </div>
                    <% i++ %> 
    
                <% }); %>  
            </div>

