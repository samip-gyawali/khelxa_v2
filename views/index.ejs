        <script>
            document.querySelectorAll('.menu-bar a').forEach((item)=>{
                if(item.dataset.name == 'home'){
                    item.classList.add('active');
                }
            });

            var allItems = document.querySelectorAll('.major-comps .item');
            var allWrapper = document.querySelectorAll('.major-comps .item .wrapper')

            allItems.forEach((item)=>{
                
                item.addEventListener('click',()=>{
                    item.childNodes[1].style.opacity = '0';
                    setTimeout(()=>{
                        item.childNodes[1].style.opacity = '1';
                    },200);
                    if(item.className != 'item item-active'){
                        changeAllClass();
                        item.className = 'item item-active'
                    }
                    
                });
            });

            function changeAllClass(){
                

                allItems.forEach((item)=>{
                    if(item.className == 'item item-active'){
                        item.childNodes[1].style.opacity = '0';
                        setTimeout(()=>{
                            item.childNodes[1].style.opacity = '1';
                        },200);
                    }
                    item.className = 'item item-collapse'
                });
